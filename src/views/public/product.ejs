<main class="main-wrapper">
    <div class="axil-single-product-area axil-section-gap pb--0 bg-color-white">
        <div class="single-product-thumb mb--40">
            <div class="container">
                <div class="row">
                    <div class="col-lg-7 mb--40">
                        <div class="row">
                            <div class="col-lg-10 order-lg-2">
                                <div class="single-product-thumbnail-wrap zoom-gallery">
                                    <div class="single-product-thumbnail product-large-thumbnail-3 axil-product">
                                        <div class="thumbnail">
                                            <a href="<%= product.thumb %>" class="popup-zoom">
                                                <img src="<%= product.thumb %>" alt="<%= product.title %>">
                                            </a>
                                        </div>
                                        <% for (const image of product.images) { %>
                                            <div class="thumbnail">
                                                <a href="<%= image %>" class="popup-zoom">
                                                    <img src="<%= image %>" alt="<%= product.title %>">
                                                </a>
                                            </div>
                                            <% } %>
                                    </div>
                                    <div class="product-quick-view position-view">
                                        <a href="<%= product.thumb %>" class="popup-zoom">
                                            <i class="far fa-search-plus"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-2 order-lg-1">
                                <div class="product-small-thumb-3 small-thumb-wrapper">
                                    <div class="small-thumb-img">
                                        <img src="<%= product.thumb %>" alt="<%= product.title %>">
                                    </div>
                                    <% for (const image of product.images) { %>
                                        <div class="small-thumb-img">
                                            <img src="<%= image %>" alt="<%= product.title %>">
                                        </div>
                                        <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-5 mb--40">
                        <div class="single-product-content">
                            <div class="inner">
                                <h2 class="product-title">
                                    <%= product.title %>
                                </h2>
                                <span class="price-amount">$<%= product.price %></span>
                                <div class="product-rating">
                                    <div class="star-rating">
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                    </div>
                                </div>
                                <ul class="product-meta">
                                    <li><i class="fal fa-check"></i>In stock</li>
                                    <li><i class="fal fa-check"></i>Free delivery available</li>
                                </ul>
                                <div class="product-variations-wrapper pb-4 mb-4">
                                    <span class="title">Category: <%= product['category.title'] %></span><br/>
                                    <span class="title">Brand: <%= product.brand %></span>
                                </div>
                                <div class="product-action-wrapper d-flex-center">
                                    <div class="pro-qty"><input type="text" value="1"></div>
                                    <ul class="product-action d-flex-center mb--0">
                                        <li class="add-to-cart" data-product-id="<%= product.id %>">
                                            <a href="javascript:void(0)" class="axil-btn btn-bg-primary">Add to Cart</a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="woocommerce-tabs wc-tabs-wrapper bg-vista-white">
            <div class="container">
                <h5 class="title">Description:</h5>
                <div class="product-desc-wrapper">
                    <div class="single-desc">
                        <%- product.description.split('\n').map(x => `<p class="mb-0">${x.trim()}</p>`).join('') %>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <ul class="pro-des-features">
                                <li class="single-features">
                                    <div class="icon">
                                        <img src="<%= baseUrl %>/assets/images/icons/service1.png" alt="Easy Returns">
                                    </div>
                                    Easy Returns
                                </li>
                                <li class="single-features">
                                    <div class="icon">
                                        <img src="<%= baseUrl %>/assets/images/icons/service2.png"
                                            alt="Quality Service">
                                    </div>
                                    Quality Service
                                </li>
                                <li class="single-features">
                                    <div class="icon">
                                        <img src="<%= baseUrl %>/assets/images/icons/service3.png"
                                            alt="Original Product">
                                    </div>
                                    Original Product
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="axil-product-area bg-color-white axil-section-gap pb--50 pb_sm--30">
        <div class="container">
            <div class="section-title-wrapper">
                <span class="title-highlighter highlighter-primary"><i class="far fa-shopping-basket"></i> Discover</span>
                <h2 class="title">Related Items</h2>
            </div>
            <div class="recent-product-activation slick-layout-wrapper--15 axil-slick-arrow arrow-top-slide">
                <% for (const product of relatedProducts) { %>
                <div class="slick-single-layout">
                    <div class="axil-product">
                        <div class="thumbnail">
                            <a href="<%= baseUrl %>/products/<%= product.slug %>">
                                <img src="<%= product.thumb %>" alt="<%= product.title %>">
                            </a>
                            <div class="product-hover-action">
                                <ul class="cart-action">
                                    <li class="quickview"><a href="<%= baseUrl %>/products/<%= product.slug %>"><i class="far fa-eye"></i></a></li>
                                    <li class="select-option add-to-cart" data-product-id="<%= product.id %>"><a href="javascript:void(0)">Add to Cart</a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="product-content">
                            <div class="inner">
                                <h5 class="title text-truncate"><a href="<%= baseUrl %>/products/<%= product.slug %>"><%= product.title %></a></h5>
                                <div class="product-price-variant">
                                    <span class="price current-price">$<%= product.price %></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <% } %>
            </div>
        </div>
    </div>
    <div class="axil-newsletter-area axil-section-gap pt--0">
        <div class="container">
            <div class="etrade-newsletter-wrapper bg_image bg_image--5">
                <div class="newsletter-content">
                    <span class="title-highlighter highlighter-primary2"><i
                            class="fas fa-envelope-open"></i>Newsletter</span>
                    <h2 class="title mb--40 mb_sm--30">Get weekly update</h2>
                    <div class="input-group newsletter-form">
                        <div class="position-relative newsletter-inner mb--15">
                            <input placeholder="Enter your email here" type="text">
                        </div>
                        <button type="submit" class="axil-btn mb--15">Subscribe</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>